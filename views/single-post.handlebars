
<article class="post">
  <div class="title">
    <p>{{post.title}}
    <span>Posted by {{post.user.username}} on
        {{format_date post.created_at}}</span>
    </p>
  </div>
  <div>
    <textarea class="post-textarea" name="text" id="text" cols="80" rows="2">{{post.text}}</textarea>
  </div>
</article>

<form class="comment-form post">
  <div class="">
    <label for="comment">Comment</label>
    <textarea id="comment" class="comment-textarea" name="comment-body"></textarea>
    <button class="comment-button" type="submit">Submit</button>
  </div>
</form>

