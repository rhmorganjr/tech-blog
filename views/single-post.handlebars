
<article class="post">
  <div class="title">
    <a href="{{title}}" target="_blank">{{title}}</a>
    <span>Posted by {{user.username}} on
        {{format_date created_at}}</span>
  </div>
  <div>
    <textarea name="text" id="text" cols="80" rows="2">{{text}}</textarea>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Submit</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

<script src="/javascript/comment.js"></script>